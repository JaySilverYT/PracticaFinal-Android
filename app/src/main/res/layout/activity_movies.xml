<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hotels">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/venom"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/venom" />

        <TextView
            android:id="@+id/venomtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-7dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/venom"
            android:text="Venom"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/venomtxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/venomtxt"
            android:layout_marginStart="3dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/venom"
            android:drawablePadding="2dp"
            android:text="@string/descrPElSot"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/avatartxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/avatar"
                android:text="Avatar"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/avatartxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatartxt"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/avatar"
                android:drawablePadding="2dp"
                android:text="@string/descrPElSot"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kong"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/kong" />

            <TextView
                android:id="@+id/kongtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-7dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/kong"
                android:text="Kong"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kongtxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kongtxt"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/kong"
                android:drawablePadding="2dp"
                android:text="@string/descrPElSot"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>